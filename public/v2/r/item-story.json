{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "item-story",
  "type": "registry:component",
  "title": "Item Story",
  "author": "Lloyd Richards <lloyd.d.richards@gmail.com>",
  "description": "Interactive Storybook stories demonstrating item component usage and variants",
  "dependencies": [
    "lucide-react"
  ],
  "registryDependencies": [
    "item",
    "button",
    "badge",
    "avatar",
    "separator"
  ],
  "files": [
    {
      "path": "src/registry/atoms/item-story/item.stories.tsx",
      "content": "import React from \"react\";\nimport type { Meta, StoryObj } from \"@storybook/react-vite\";\nimport {\n  Item,\n  ItemActions,\n  ItemContent,\n  ItemDescription,\n  ItemFooter,\n  ItemGroup,\n  ItemHeader,\n  ItemMedia,\n  ItemSeparator,\n  ItemTitle,\n} from \"@/components/ui/item\";\nimport { Button } from \"@/components/ui/button\";\nimport { Badge } from \"@/components/ui/badge\";\nimport { Avatar, AvatarFallback, AvatarImage } from \"@/components/ui/avatar\";\nimport {\n  CheckCircle,\n  ChevronRight,\n  Star,\n  Clock,\n  User,\n  FileText,\n  Settings,\n  Download,\n  Heart,\n  MessageSquare,\n  Share,\n  Calendar,\n  Mail,\n  Phone,\n  MapPin,\n  Link as LinkIcon,\n  Edit,\n  Trash2,\n  MoreHorizontal,\n} from \"lucide-react\";\n\n/**\n * Item 컴포넌트는 정보를 구조화된 형태로 표시하는 데 사용됩니다.\n * shadcn/ui 공식 문서의 예제들을 기반으로 구현되었습니다.\n */\nconst meta: Meta<typeof Item> = {\n  title: \"ui/Item\",\n  component: Item,\n  tags: [\"autodocs\"],\n  parameters: {\n    layout: \"centered\",\n  },\n  argTypes: {\n    variant: {\n      control: { type: \"radio\" },\n      options: [\"default\", \"outline\", \"muted\"],\n    },\n    size: {\n      control: { type: \"radio\" },\n      options: [\"default\", \"sm\"],\n    },\n  },\n} satisfies Meta<typeof Item>;\n\nexport default meta;\ntype Story = StoryObj<typeof meta>;\n\n/**\n * 기본 Item - 제목과 설명, 액션 버튼\n */\nexport const Default: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <Item variant=\"outline\">\n        <ItemContent>\n          <ItemTitle>Basic Item</ItemTitle>\n          <ItemDescription>\n            A simple item with title and description.\n          </ItemDescription>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"outline\" size=\"sm\">\n            Action\n          </Button>\n        </ItemActions>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * Item Variants - 다양한 스타일 변형\n */\nexport const Variants: Story = {\n  render: () => (\n    <div className=\"w-96 space-y-4\">\n      <Item>\n        <ItemContent>\n          <ItemTitle>Default Variant</ItemTitle>\n          <ItemDescription>\n            Standard styling with subtle background and borders.\n          </ItemDescription>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"outline\" size=\"sm\">\n            Open\n          </Button>\n        </ItemActions>\n      </Item>\n\n      <Item variant=\"outline\">\n        <ItemContent>\n          <ItemTitle>Outline Variant</ItemTitle>\n          <ItemDescription>\n            Clear border styling for better separation.\n          </ItemDescription>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"outline\" size=\"sm\">\n            View\n          </Button>\n        </ItemActions>\n      </Item>\n\n      <Item variant=\"muted\">\n        <ItemContent>\n          <ItemTitle>Muted Variant</ItemTitle>\n          <ItemDescription>\n            Softer background for subtle emphasis.\n          </ItemDescription>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"outline\" size=\"sm\">\n            Edit\n          </Button>\n        </ItemActions>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * Item Sizes - 크기 변형\n */\nexport const Sizes: Story = {\n  render: () => (\n    <div className=\"w-96 space-y-4\">\n      <Item variant=\"outline\">\n        <ItemContent>\n          <ItemTitle>Default Size</ItemTitle>\n          <ItemDescription>\n            Standard padding for comfortable reading.\n          </ItemDescription>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"outline\" size=\"sm\">\n            Action\n          </Button>\n        </ItemActions>\n      </Item>\n\n      <Item variant=\"outline\" size=\"sm\">\n        <ItemContent>\n          <ItemTitle>Small Size</ItemTitle>\n          <ItemDescription>\n            Compact layout for dense information.\n          </ItemDescription>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"outline\" size=\"sm\">\n            Action\n          </Button>\n        </ItemActions>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * Icon Media Item - 아이콘이 있는 아이템\n */\nexport const WithIconMedia: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <Item variant=\"outline\">\n        <ItemMedia variant=\"icon\">\n          <CheckCircle />\n        </ItemMedia>\n        <ItemContent>\n          <ItemTitle>Profile Verified</ItemTitle>\n          <ItemDescription>\n            Your profile has been successfully verified.\n          </ItemDescription>\n        </ItemContent>\n        <ItemActions>\n          <ChevronRight className=\"h-4 w-4\" />\n        </ItemActions>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * Image Media Item - 이미지가 있는 아이템\n */\nexport const WithImageMedia: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <Item variant=\"outline\">\n        <ItemMedia variant=\"image\">\n          <img\n            src=\"https://github.com/shadcn.png\"\n            alt=\"User Avatar\"\n            className=\"rounded-sm\"\n          />\n        </ItemMedia>\n        <ItemContent>\n          <ItemTitle>shadcn/ui</ItemTitle>\n          <ItemDescription>\n            Beautifully designed components built with Radix UI and Tailwind\n            CSS.\n          </ItemDescription>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"outline\" size=\"sm\">\n            Follow\n          </Button>\n        </ItemActions>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * Avatar Media Item - 아바타가 있는 아이템\n */\nexport const WithAvatarMedia: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <Item variant=\"outline\">\n        <ItemMedia>\n          <Avatar>\n            <AvatarImage src=\"https://github.com/vercel.png\" />\n            <AvatarFallback>VE</AvatarFallback>\n          </Avatar>\n        </ItemMedia>\n        <ItemContent>\n          <ItemTitle>Vercel</ItemTitle>\n          <ItemDescription>\n            The Frontend Cloud – Build, deploy, and scale your applications.\n          </ItemDescription>\n        </ItemContent>\n        <ItemActions>\n          <Star className=\"h-4 w-4\" />\n          <span className=\"text-muted-foreground text-sm\">4.8</span>\n        </ItemActions>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * Link Item - 클릭 가능한 링크 아이템\n */\nexport const AsLink: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <Item variant=\"outline\" asChild>\n        <a href=\"#\" className=\"hover:bg-accent/50\">\n          <ItemMedia variant=\"icon\">\n            <FileText />\n          </ItemMedia>\n          <ItemContent>\n            <ItemTitle>Documentation</ItemTitle>\n            <ItemDescription>\n              Read the full documentation and guides.\n            </ItemDescription>\n          </ItemContent>\n          <ItemActions>\n            <ChevronRight className=\"h-4 w-4\" />\n          </ItemActions>\n        </a>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * Header and Footer Item - 헤더와 푸터가 있는 복합 아이템\n */\nexport const WithHeaderFooter: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <Item variant=\"outline\">\n        <ItemHeader>\n          <ItemTitle>Project Update</ItemTitle>\n          <Badge variant=\"secondary\">New</Badge>\n        </ItemHeader>\n        <ItemContent>\n          <ItemDescription>\n            We've made some exciting improvements to the dashboard. Check out\n            the new features and enhanced performance.\n          </ItemDescription>\n        </ItemContent>\n        <ItemFooter>\n          <div className=\"text-muted-foreground flex items-center gap-2 text-sm\">\n            <Clock className=\"h-3 w-3\" />\n            <span>2 hours ago</span>\n          </div>\n          <ItemActions>\n            <Button variant=\"ghost\" size=\"sm\">\n              <Heart className=\"h-4 w-4\" />\n            </Button>\n            <Button variant=\"ghost\" size=\"sm\">\n              <MessageSquare className=\"h-4 w-4\" />\n            </Button>\n            <Button variant=\"ghost\" size=\"sm\">\n              <Share className=\"h-4 w-4\" />\n            </Button>\n          </ItemActions>\n        </ItemFooter>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * Contact Item - 연락처 정보 아이템\n */\nexport const ContactItem: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <Item variant=\"outline\">\n        <ItemMedia>\n          <Avatar>\n            <AvatarFallback>\n              <User />\n            </AvatarFallback>\n          </Avatar>\n        </ItemMedia>\n        <ItemContent>\n          <ItemTitle>John Doe</ItemTitle>\n          <ItemDescription>Senior Developer at Acme Corp</ItemDescription>\n          <div className=\"mt-2 flex flex-col gap-1\">\n            <div className=\"text-muted-foreground flex items-center gap-2 text-sm\">\n              <Mail className=\"h-3 w-3\" />\n              <span>john@example.com</span>\n            </div>\n            <div className=\"text-muted-foreground flex items-center gap-2 text-sm\">\n              <Phone className=\"h-3 w-3\" />\n              <span>+1 (555) 123-4567</span>\n            </div>\n            <div className=\"text-muted-foreground flex items-center gap-2 text-sm\">\n              <MapPin className=\"h-3 w-3\" />\n              <span>San Francisco, CA</span>\n            </div>\n          </div>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"outline\" size=\"sm\">\n            <LinkIcon className=\"h-4 w-4\" />\n          </Button>\n        </ItemActions>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * File Item - 파일 정보 아이템\n */\nexport const FileItem: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <Item variant=\"outline\">\n        <ItemMedia variant=\"icon\">\n          <FileText />\n        </ItemMedia>\n        <ItemContent>\n          <ItemTitle>project-proposal.pdf</ItemTitle>\n          <ItemDescription>\n            Design proposal for the new mobile application\n          </ItemDescription>\n          <div className=\"text-muted-foreground mt-2 flex items-center gap-4 text-sm\">\n            <div className=\"flex items-center gap-1\">\n              <Calendar className=\"h-3 w-3\" />\n              <span>Dec 15, 2023</span>\n            </div>\n            <span>2.4 MB</span>\n          </div>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"outline\" size=\"sm\">\n            <Download className=\"h-4 w-4\" />\n          </Button>\n          <Button variant=\"ghost\" size=\"sm\">\n            <MoreHorizontal className=\"h-4 w-4\" />\n          </Button>\n        </ItemActions>\n      </Item>\n    </div>\n  ),\n};\n\n/**\n * Item Group - 아이템들의 그룹\n */\nexport const ItemGroupExample: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <ItemGroup>\n        <Item>\n          <ItemMedia variant=\"icon\">\n            <Settings />\n          </ItemMedia>\n          <ItemContent>\n            <ItemTitle>General Settings</ItemTitle>\n            <ItemDescription>\n              Manage your account preferences and settings.\n            </ItemDescription>\n          </ItemContent>\n          <ItemActions>\n            <ChevronRight className=\"h-4 w-4\" />\n          </ItemActions>\n        </Item>\n\n        <ItemSeparator />\n\n        <Item>\n          <ItemMedia variant=\"icon\">\n            <User />\n          </ItemMedia>\n          <ItemContent>\n            <ItemTitle>Profile Settings</ItemTitle>\n            <ItemDescription>\n              Update your profile information and avatar.\n            </ItemDescription>\n          </ItemContent>\n          <ItemActions>\n            <ChevronRight className=\"h-4 w-4\" />\n          </ItemActions>\n        </Item>\n\n        <ItemSeparator />\n\n        <Item>\n          <ItemMedia variant=\"icon\">\n            <Mail />\n          </ItemMedia>\n          <ItemContent>\n            <ItemTitle>Email Preferences</ItemTitle>\n            <ItemDescription>\n              Configure notification and email settings.\n            </ItemDescription>\n          </ItemContent>\n          <ItemActions>\n            <ChevronRight className=\"h-4 w-4\" />\n          </ItemActions>\n        </Item>\n      </ItemGroup>\n    </div>\n  ),\n};\n\n/**\n * Interactive Item - 편집 가능한 아이템\n */\nexport const InteractiveItem: Story = {\n  render: () => (\n    <div className=\"w-96\">\n      <Item variant=\"outline\">\n        <ItemMedia variant=\"icon\">\n          <FileText />\n        </ItemMedia>\n        <ItemContent>\n          <ItemTitle>Meeting Notes</ItemTitle>\n          <ItemDescription>\n            Weekly team sync and project updates\n          </ItemDescription>\n          <div className=\"text-muted-foreground mt-2 flex items-center gap-2 text-sm\">\n            <Clock className=\"h-3 w-3\" />\n            <span>Last edited 5 minutes ago</span>\n          </div>\n        </ItemContent>\n        <ItemActions>\n          <Button variant=\"ghost\" size=\"sm\">\n            <Edit className=\"h-4 w-4\" />\n          </Button>\n          <Button variant=\"ghost\" size=\"sm\">\n            <Trash2 className=\"h-4 w-4\" />\n          </Button>\n          <Button variant=\"outline\" size=\"sm\">\n            Open\n          </Button>\n        </ItemActions>\n      </Item>\n    </div>\n  ),\n};\n",
      "type": "registry:component"
    }
  ],
  "categories": [
    "atoms",
    "storybook",
    "item",
    "layout"
  ]
}